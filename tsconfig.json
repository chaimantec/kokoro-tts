{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    
    /* Chrome Extension */
    "typeRoots": ["./node_modules/@types", "./node_modules/@types/chrome"]
  },
  "include": ["src/extension/**/*.ts", "src/background.ts", "src/offscreen.ts", "src/popup.ts", "src/types.ts"]
}
